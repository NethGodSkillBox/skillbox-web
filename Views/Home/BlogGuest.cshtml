@model HtmlTemplate

@{
    ViewBag.Title = "Index";
    Layout = "/Views/Shared/_LayoutGuest.cshtml";
    int i = 0;
}

<style type="text/css">
    @@media only screen and (min-width: 960px) {
        .card {
            max-width: 30%;
        }
    }
</style>

<div class="container" style="margin-top:20px">
    <div class="col-12">
        <h2 class="mb-3 text-primary">Блог</h2>
    </div>

    <div class="card-deck">
        @{
            if (ViewBag.Blogs != null)
            {
                foreach (HtmlTemplate item in ViewBag.Blogs)
                {
                    i += 1;
                    <div class="card" style="margin-bottom:10px">
                        <img class="card-img-top" src="@item.Img" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">@item.Title</h5>
                            <p class="card-text">@item.Text</p>
                        </div>
                        <a class="btn btn-dark" asp-controller="Home" asp-action="MoreInfo" asp-route-id="@item.Id">Подробнее</a>
                        <div class="card-footer">
                            <small class="text-muted">Последнее обновление @item.Time.ToString("dd-MM-yyyy")</small>
                        </div>
                    </div>
                    if (i % 3 == 0)
                    {
                        <div class="w-100"></div>
                    }
                }
            }
        }
    </div>
</div>
