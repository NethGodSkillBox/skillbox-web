@{
    ViewBag.Title = "Index";
    Layout = "/Views/Shared/_LayoutGuest.cshtml";
}

<img src="~/images/it-consulting.jpg" class="img-fluid" alt="Responsive image" style="margin: 0 0 10px 0" >
<div class="container">
    <form style="margin: 20px 0 0 0" asp-controller="Requestions" asp-action="AddReq" method="post">
        <input type="hidden" class="form-control" name="Time" value="@DateTime.Now">
        <input type="hidden" class="form-control" name="Status" value="Получена">
        <div class="form-row">
            <div class="col">
                <label>Имя</label><br />
                <input type="text" class="form-control" placeholder="Имя" name="Name">
            </div>
            <div class="col">
                <label>Email</label><br />
                <input type="text" class="form-control" placeholder="Email" name="Email">
            </div>
        </div>
        <div class="form-group">
            <label for="exampleFormControlTextarea1">Текст заявки</label>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" style="height:180px" name="Text"></textarea>
        </div>
        <p><input type="submit" value="Добавить" style="margin: 10px 0 0 0"></p>
    </form>
</div>